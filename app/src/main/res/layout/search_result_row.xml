<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp">

    <TextView android:id="@+id/result_name"
        android:text="title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Black"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:maxLines="2"/>

    <RelativeLayout
        android:layout_below="@+id/result_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingRight="20dp"
            android:text="Channel"
            android:id="@+id/result_channel"/>
        <TextView
            android:layout_toRightOf="@id/result_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingRight="20dp"
            android:text="Time"
            android:id="@+id/result_time"/>
        <TextView
            android:layout_toRightOf="@id/result_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Category"
            android:id="@+id/result_category"/>
    </RelativeLayout>

</RelativeLayout>